{
  "name": "webapp",
  "private": true,
  "devDependencies": {
    "esbuild": "^0.23.0",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "typecheck": "tsc --noEmit -p frontend/tsconfig.json",
    "build": "npm run typecheck && esbuild frontend/src/index.ts --bundle --format=esm --minify --sourcemap --outfile=static/js/index.js",
    "watch": "esbuild frontend/src/index.ts --bundle --format=esm --sourcemap --outfile=static/js/index.js --watch"
  }
}
