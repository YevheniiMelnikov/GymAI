# ────────────── app ──────────────
API_KEY=api-key-xxx
DEBUG_STATUS=True
LOG_LEVEL=DEBUG
API_URL=http://localhost:8000
REDIS_URL=redis://redis:6379
GOOGLE_APPLICATION_CREDENTIALS="google_creds.json"  # set to /app/google_creds.json if you use Docker
GDRIVE_FOLDER_ID=
TIME_ZONE=Europe/Kyiv

# ────────────── postgres ──────────────
DB_NAME=postgres
DB_USER=postgres
DB_HOST=db
DB_PORT=5432
POSTGRES_PASSWORD=password
POSTGRES_DB="${DB_NAME}"
PGDATA=/var/lib/postgresql/data/pgdata

# ─ Alembic / Cognee migrations → Postgres
MIGRATION_DB_PROVIDER=postgres
MIGRATION_DB_NAME="${DB_NAME}"
MIGRATION_DB_HOST="${DB_HOST}"
MIGRATION_DB_PORT="${DB_PORT}"
MIGRATION_DB_USERNAME="${DB_USER}"
MIGRATION_DB_PASSWORD="${POSTGRES_PASSWORD}"

# ────────────── cognee ──────────────
COGNEE_API_URL=https://api.openai.com/v1
COGNEE_API_KEY=
COGNEE_LLM_PROVIDER=openai
COGNEE_MODEL=gpt-4o
VECTORDATABASE_PROVIDER=pgvector
GRAPH_DATABASE_PROVIDER=networkx

# ────────────── bot ──────────────
BOT_TOKEN=bot-token-xxx
DEFAULT_LANG=eng
ADMIN_ID=123456789
BOT_LINK=https://t.me/your_bot
BOT_INTERNAL_URL=http://bot:8000
WEBHOOK_HOST=https://xxx.ngrok-free.app
WEBHOOK_PORT=8001

# ────────────── payments ──────────────
CHECKOUT_URL=https://www.liqpay.ua/api/3/checkout
PAYMENT_PUB_KEY=liqpay-pub-key
PAYMENT_PRIVATE_KEY=liqpay-private-key
